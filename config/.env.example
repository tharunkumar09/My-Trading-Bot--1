# Copy this file to .env and fill in your credentials

# API Provider: "upstox" or "angel_one"
API_PROVIDER=upstox

# Upstox Credentials
UPSTOX_API_KEY=your_api_key_here
UPSTOX_API_SECRET=your_api_secret_here
UPSTOX_REDIRECT_URI=http://localhost:3000
UPSTOX_ACCESS_TOKEN=your_access_token_here

# Angel One Credentials (if using Angel One)
ANGEL_ONE_API_KEY=your_api_key_here
ANGEL_ONE_CLIENT_ID=your_client_id_here
ANGEL_ONE_PIN=your_pin_here
ANGEL_ONE_TOTP_SECRET=your_totp_secret_here

# Trading Configuration
TRADING_SYMBOL=NSE_EQ|INE467B01029
EXCHANGE=NSE_EQ
PRODUCT_TYPE=INTRADAY

# Risk Management
MAX_POSITION_SIZE=10000
MAX_PORTFOLIO_RISK=0.02
STOP_LOSS_PERCENTAGE=0.02
TRAILING_STOP_PERCENTAGE=0.01
MAX_DAILY_LOSS=5000
